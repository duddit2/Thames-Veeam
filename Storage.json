{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        
        "PrimarySA": {
            "type":"object"
        },
        "SecondarySA": {
            "type":"object"
        },
        
        "PrimarySubnetString": {
            "type":"string"
        }
    },


    "variables": {
        "PrimarySAName": "sauksprdveeambr001",
        "SecondarySAName": "saukwprdveeambr001"
    },


    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-09-01",
            "name": "[variables('PrimarySAName')]",
            "location": "[parameters('PrimarySA').location]",
            "sku": {
                "name": "[parameters('PrimarySA').sku]",
                "tier": "Standard"
            },
            "kind": "[parameters('PrimarySA').kind]",
            "properties": {
                "dnsEndpointType": "[parameters('PrimarySA').dnsEndpointType]",
                "defaultToOAuthAuthentication": "[parameters('PrimarySA').defaultToOAuthAuthentication]",
                "publicNetworkAccess": "[parameters('PrimarySA').publicNetworkAccess]",
                "minimumTlsVersion": "[parameters('PrimarySA').minimumTlsVersion]",
                "allowBlobPublicAccess": "[parameters('PrimarySA').allowBlobPublicAccess]",
                "allowSharedKeyAccess": "[parameters('PrimarySA').allowSharedKeyAccess]",
                "largeFileSharesState": "[parameters('PrimarySA').largeFileSharesState]",
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                        {
                            "id": "[parameters('PrimarySubnetString')]",
                            "action": "Allow"
                        }
                    ],
                    "ipRules": [],
                    "defaultAction": "Deny"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "requireInfrastructureEncryption": false,
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "[parameters('PrimarySA').accesstier]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices",
            "apiVersion": "2021-09-01",
            "name": "[concat(variables('PrimarySAName'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('PrimarySAName'))]"
            ],
            "sku": {
                "name": "[parameters('PrimarySA').sku]",
                "tier": "Standard"
            },
            "properties": {
                "cors": {
                    "corsRules": []
                },
                "deleteRetentionPolicy": {
                    "allowPermanentDelete": false,
                    "enabled": false
                },
                "isVersioningEnabled": false,
                "changeFeed": {
                    "enabled": false
                },
                "restorePolicy": {
                    "enabled": false
                },
                "containerDeleteRetentionPolicy": {
                    "enabled": false
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices",
            "apiVersion": "2021-09-01",
            "name": "[concat(variables('PrimarySAName'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('PrimarySAName'))]"
            ],
            "sku": {
                "name": "[parameters('PrimarySA').sku]",
                "tier": "Standard"
            },
            "properties": {
                
                "shareDeleteRetentionPolicy": {
                    "enabled": true,
                    "days": 7
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2021-09-01",
            "name": "[concat(variables('PrimarySAName'),'/default/veeamrepo00',copyIndex())]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices', variables('PrimarySAName'), 'default')]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('PrimarySAName'))]"
            ],
            "properties": {
                "accessTier": "Hot",
                "shareQuota": 102400,
                "enabledProtocols": "SMB"
            },
            "copy": {
                "name": "shares",
                "count": 4
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-09-01",
            "name": "[tolower(variables('SecondarySAName'))]",
            "location": "[parameters('SecondarySA').location]",
            "sku": {
                "name": "[parameters('SecondarySA').sku]",
                "tier": "Standard"
            },
            "kind": "[parameters('SecondarySA').kind]",
            "properties": {
                "dnsEndpointType": "[parameters('SecondarySA').dnsEndpointType]",
                "defaultToOAuthAuthentication": "[parameters('SecondarySA').defaultToOAuthAuthentication]",
                "publicNetworkAccess": "[parameters('SecondarySA').publicNetworkAccess]",
                "minimumTlsVersion": "[parameters('SecondarySA').minimumTlsVersion]",
                "allowBlobPublicAccess": "[parameters('SecondarySA').allowBlobPublicAccess]",
                "allowSharedKeyAccess": "[parameters('SecondarySA').allowSharedKeyAccess]",
                "largeFileSharesState": "[parameters('SecondarySA').largeFileSharesState]",
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                        {
                            "id": "[parameters('PrimarySubnetString')]",
                            "action": "Allow"
                        }
                    ],
                    "ipRules": [],
                    "defaultAction": "Deny"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "requireInfrastructureEncryption": false,
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "[parameters('SecondarySA').accesstier]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices",
            "apiVersion": "2021-09-01",
            "name": "[tolower(concat(variables('SecondarySAName'), '/default'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('SecondarySAName'))]"
            ],
            "sku": {
                "name": "[parameters('SecondarySA').sku]",
                "tier": "Standard"
            },
            "properties": {
                "cors": {
                    "corsRules": []
                },
                "deleteRetentionPolicy": {
                    "allowPermanentDelete": false,
                    "enabled": false
                },
                "isVersioningEnabled": false,
                "changeFeed": {
                    "enabled": false
                },
                "restorePolicy": {
                    "enabled": false
                },
                "containerDeleteRetentionPolicy": {
                    "enabled": false
                }
            }
        }
    ]
}